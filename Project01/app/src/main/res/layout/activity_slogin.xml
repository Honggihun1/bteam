<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B300062C" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:shadowColor="#65000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="2"
        android:text="S"
        android:textColor="#ffffff"
        android:textSize="100sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:shadowColor="#65000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="2"
        android:text="S CLASS"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:background="@drawable/round"
        android:elevation="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etId"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#66FFFFFF"
            android:gravity="center_vertical"
            android:hint="학생 / 학부모 아이디"
            android:textColor="#ffffff"
            android:textColorHint="#66FFFFFF"
            android:textSize="24sp"
            android:textCursorDrawable="@drawable/cursor" />

        <EditText
            android:id="@+id/etPw"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#66FFFFFF"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:textColor="#ffffff"
            android:textColorHint="#66FFFFFF"
            android:textSize="24sp"
            android:textCursorDrawable="@drawable/cursor"/>
        <CheckBox
            android:id="@+id/auto"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="자동로그인"
            android:textColor="#99FFFFFF"
            android:buttonTint="#99FFFFFF"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="#4DCCCCCC"
                android:text="로그인"
                android:textColor="#5d20aa"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="#4DCCCCCC"
                android:text="회원가입"
                android:textColor="#5d20aa"
                android:textSize="20sp"
                app:cornerRadius="10dp" />




        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnfind"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:backgroundTint="#00FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="아이디 / 비밀번호 찾기"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:iconPadding="0dp"/>

</FrameLayout>